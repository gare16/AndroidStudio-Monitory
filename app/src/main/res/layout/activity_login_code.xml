<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".LoginCode">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_code_text_title"
        style="@style/TextNunitoBold24Black87"
        android:layout_marginTop="@dimen/dimen54"
        android:layout_marginStart="@dimen/dimen26"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/subTittle"
        style="@style/TextRubikRegular15Black87"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen26"
        android:layout_marginTop="@dimen/dimen8"
        android:layout_marginRight="@dimen/dimen26"
        android:text="@string/check_code_text_sub"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/inputCode"
        style="@style/EditWhiteBorderYellowRubikRegular14Gunmetal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50"
        android:layout_marginLeft="@dimen/dimen26"
        android:layout_marginTop="@dimen/dimen34"
        android:layout_marginRight="@dimen/dimen26"
        android:gravity="center"
        android:hint="@string/check_code_edit_hint_voucher"
        android:inputType="textCapCharacters"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:importantForAutofill="no"
        app:layout_constraintTop_toBottomOf="@id/subTittle"/>

    <TextView
        android:id="@+id/txtCheckCodeAgree"
        style="@style/TextRubikRegular12Black87"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen26"
        android:layout_marginTop="@dimen/dimen22"
        android:layout_marginEnd="@dimen/dimen26"
        android:gravity="center"
        android:paddingStart="@dimen/dimen12"
        android:paddingEnd="@dimen/dimen12"
        android:text="@string/check_code_text_agreement"
        app:layout_constraintTop_toBottomOf="@id/inputCode"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        style="@style/ButtonYellowRounded18RubikMedium14Black"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/dimen12"
        android:layout_marginHorizontal="@dimen/dimen26"
        android:text="@string/check_code_button_get_started"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/txtCheckCodeAgree" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_lin_border_white"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textBuy"
            style="@style/TextRubikRegular15Black87"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen26"
            android:layout_marginTop="@dimen/dimen34"
            android:layout_marginEnd="@dimen/dimen26"
            android:layout_marginBottom="@dimen/dimen16"
            android:gravity="center"
            android:text="@string/check_code_text_buy" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBuyCode"
            style="@style/ButtonBlueRounded18RubikMedium14White"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/textBuy"
            android:layout_marginStart="@dimen/dimen26"
            android:layout_marginTop="@dimen/dimen8"
            android:layout_marginEnd="@dimen/dimen26"
            android:layout_marginBottom="@dimen/dimen34"
            android:text="@string/check_code_button_buy" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>