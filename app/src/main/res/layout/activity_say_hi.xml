<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".SayHi">

    <TextView
        android:id="@+id/textSayHi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activation_beres"
        style="@style/TextGunmetalNunitoBold24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimen44"
        android:layout_marginStart="@dimen/dimen26"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnClose"
        android:layout_width="@dimen/dimen180"
        android:layout_height="wrap_content"
        android:text="@string/activation_oke"
        android:layout_marginBottom="@dimen/dimen44"
        style="@style/ButtonYellowRounded18RubikMedium14Black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>